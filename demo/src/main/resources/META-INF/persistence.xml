<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1">
    <persistence-unit name="jpabook">
        <!--<class>com.jpa.demo.CRUDTest.domain.Member</class>
        <class>com.jpa.demo.keyStrategy.domain.Board</class>-->
        <!--<class>com.jpa.demo.persistenceContext.domain.Member</class>-->
        <class>com.jpa.demo.tableMapping.domain.Team</class>
        <class>com.jpa.demo.tableMapping.domain.Member</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/D:/test"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <!-- @Column 명 생략시, 카멜 표기법을 스네이크 표기법으로 변경해준다. -->
            <!--<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.id.new_generator_mappings" value="true"/>

        </properties>
    </persistence-unit>
</persistence>